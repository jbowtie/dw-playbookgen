<%= form_for @changeset, @action, [{:class, "ui form"}], fn f -> %>
  <%= if @changeset.action do %>
    <div class="ui message error">
      <p>Oops, something went wrong! Please check the errors below:</p>
      <ul>
        <%= for {attr, message} <- f.errors do %>
          <li><%= humanize(attr) %> <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= label f, :title, "Title", class: "ui label" %>
    <%= text_input f, :title, class: "form-control", required: "required" %>
  </div>

  <div class="field">
    <%= label f, :usage, "Usage", class: "ui label" %>
    <%= text_input f, :usage, class: "form-control" %>
    <p class="ui small message"><i>Optional.</i> Used to show which moves are required or replaced. Example: "Requires: First Aid "</p>
  </div>

  <div class="field">
    <%= label f, :desc, "Description", class: "ui label" %>
    <%= textarea f, :desc, data_uk_htmleditor: "{markdown:true, mode:'tab'}" %>
  </div>

  <div class="field">
    <%= label f, :level, "Move Type", class: "ui label" %>
    <%= select(f, :level, [
      "Starting": "1", 
      "Starting (special)": "0", 
      "Starting (not preticked)": "-1", 
      "Advanced (2-5)": "2",
      "Master (6-10)": "6",
      "Motivation": "20",
      "Specialization": "30",
      "Death": "100" 
    ], class: "ui dropdown")%>
  </div>

<div class="ui buttons">
  <button class="ui button">Cancel</button>
  <div class="or"></div>
  <%= submit "Save", class: "ui positive button" %>
</div>
<% end %>
