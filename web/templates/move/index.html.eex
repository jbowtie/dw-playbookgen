<h2><%= @playbook.name %> moves</h2>

<%= link "New move", to: playbook_move_path(@conn, :new, @playbook), class: "btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Move Type</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for move <- @moves do %>
    <tr>
      <td><%= move.title %></td>
      <td><%= level_desc move.level %></td>

      <td class="text-right">
        <%= link "Show", to: playbook_move_path(@conn, :show, @playbook, move), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: playbook_move_path(@conn, :edit, @playbook, move), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: playbook_move_path(@conn, :delete, @playbook, move), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New move", to: playbook_move_path(@conn, :new, @playbook) %>
